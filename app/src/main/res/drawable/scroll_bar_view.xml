<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle"

            >
            <corners android:radius="20dp" />
            <solid android:color="@color/dia_bg_color_white_theme" /> <!-- Background color -->
            <size
                android:width="5dp"
                android:height="5dp" /> <!-- Button size -->
        </shape>
    </item>

    <!-- Up Arrow -->
    <item
        android:bottom="10dp"
        android:gravity="center"
        android:top="0dp">
        <vector
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="@color/colorAccent"
                android:pathData="M7,14l5,-5l5,5z" />
        </vector>
    </item>

    <!-- Down Arrow -->
    <item
        android:bottom="0dp"
        android:gravity="center"
        android:top="10dp">
        <vector
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="@color/colorAccent"
                android:pathData="M7,10l5,5l5,-5z" />
        </vector>
    </item>

</layer-list>
